@model CodeFirstBanking.Models.Loan

@{
    ViewData["Title"] = "PayLoan";
}

<h2>Deposit</h2>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <hr />

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(model => model.LoanId, "Loan Id:")
                @Html.EditorFor(Model => Model.LoanId)

            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                @Html.LabelFor(Model => Model.AccountBalance, "Pay Amount:")
                @Html.EditorFor(Model => Model.AccountBalance, new { htmlAttributes = new { @class = "form-group", @min="0" } })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-10">
                <input type="submit" />
            </div>
        </div>
    </div>
}